<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	 
	android:background="@drawable/bg3">




	<LinearLayout 
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="horizontal"
	android:id="@+id/up"
	>
		 
 
  <LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="50dip"
  android:orientation="vertical"
  	android:layout_weight="1"
  
  > 
  <ImageView 
  android:background="@drawable/corner"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  
  />  
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"  
			android:layout_width="fill_parent" 
		 
			android:background="@drawable/tab_bg_top"
			android:layout_height="fill_parent"
            
			android:id="@+id/relativeLayout1">
				<ListView android:listSelector="@drawable/list_selector" 
			  android:divider="@drawable/dot_divier"
				android:scrollbars="none" 
				android:layout_width="fill_parent"
				 android:id="@+id/myListView" 
				 android:background="#00000000"
				android:cacheColorHint="#00000000" 
				android:layout_height="350dip"
			 
				 ></ListView>
		 
		 
			</LinearLayout>
    <ImageView 
	android:background="@drawable/tab_bg_bottom"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  
  />
  
	 
			 </LinearLayout>

		 

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:id="@+id/clist" 
				android:layout_weight="3"
				android:layout_width="fill_parent" android:layout_height="match_parent">

			<Button android:id="@+id/monday_btn" android:layout_width="105dip"
				android:layout_height="50dip" android:background="@drawable/day1_button"
				android:text="周一          " android:layout_marginTop="10dip" android:textSize="20sp" />
			<Button android:id="@+id/tuesday_btn" android:layout_width="105dip"
				android:layout_height="50dip" android:background="@drawable/day1_button"
				 
				android:text="二               " android:layout_marginTop="15dip" android:textSize="20sp" />
			<Button android:id="@+id/wedday_btn" android:layout_width="105dip"
				android:layout_height="50dip" android:background="@drawable/day1_button"
				android:text="三               " android:layout_marginTop="15dip" android:textSize="20sp" />
			<Button android:id="@+id/thursday_btn" android:layout_width="105dip"
				android:layout_height="50dip" android:background="@drawable/day1_button"
				android:text="四               " android:layout_marginTop="15dip" android:textSize="20sp" />
			<Button android:id="@+id/firday_btn" android:layout_width="105dip"
				android:layout_height="50dip" android:background="@drawable/day1_button"
				android:text="五               " android:layout_marginTop="15dip" android:textSize="20sp" />
</LinearLayout>
 

	 
	</LinearLayout>

